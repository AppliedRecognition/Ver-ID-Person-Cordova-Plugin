<?xml version='1.0' encoding='utf-8'?>
<widget id="com.appliedrec.veridcordovasample" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>testingSample</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="cdvtests/index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <hook src="../hooks/addPasswordAndroid.js" type="before_plugin_install" />
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="21" />
        <resource-file src="../assets/Ver-ID identity.p12" target="app/src/main/assets/Ver-ID identity.p12" />
    </platform>
    <platform name="ios">
        <hook src="../hooks/addPasswordiOS.js" type="before_plugin_install" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="deployment-target" value="10.3" />
        <preference name="SwiftVersion" value="5.0.0" />
        <resource-file src="../assets/Ver-ID identity.p12" target="Ver-ID identity.p12" />
    </platform>
</widget>
